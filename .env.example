# Configuración de Kokoro TTS para español
COMPOSE_PROJECT_NAME=kokoro-tts-ms

# Puerto externo
KOKORO_PORT=5002

# Configuración Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5002

# Configuración de idioma y voz
DEFAULT_LANGUAGE=es
DEFAULT_VOICE=ef_dora

# Configuración de debug
DEBUG_AUDIO=true

# Nombre del contenedor
CONTAINER_NAME=kokoro-tts

# Rutas de volúmenes
MODELS_PATH=./app/models
DEBUG_AUDIO_PATH=./debug_audio

# Configuración GPU
GPU_COUNT=1

# Configuración de healthcheck
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=60s 